<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    tools:context="com.didactapp.echopark.MainActivity"
    android:weightSum="1">

    <fragment
        android:layout_weight="0.8"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:cameraBearing="112.5"
        map:cameraTilt="65"
        map:cameraZoom="17"
        />

    <LinearLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="64dp"
        android:weightSum="1"
        android:background="@color/colorPrimary">
        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TRANSMIT ECHO"
            android:id="@+id/transmit_echo_button"
            android:layout_weight="0.5"
            android:onClick="onClickTransmitEcho"
            android:textAllCaps="true"/>
        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="FIND PARKING"
            android:id="@+id/find_parking_buttons"
            android:layout_weight="0.5"
            android:onClick="onClickFindParking"
            android:textAllCaps="true"/>
    </LinearLayout>



</LinearLayout>
